<Window x:Class="SystemProgrammingExam.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:SystemProgrammingExam"
        mc:Ignorable="d"
        Title="SMS Sender" Height="310" Width="300">
    <Grid>
        <TextBlock HorizontalAlignment="Left" Margin="10,10,0,0" Text="Введите номер телефона:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20" />
        <TextBox x:Name="phoneTextBox" HorizontalAlignment="Left" Margin="39,42,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="229" FontSize="20" />
        <TextBlock HorizontalAlignment="Left" Margin="10,76,0,0" Text="Введите текст для отправки:" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>
        <TextBox x:Name="smsTextBox" HorizontalAlignment="Left" Margin="10,108,0,0" Text="" TextWrapping="Wrap" VerticalAlignment="Top" Width="258" FontSize="20" Height="109" />
        <Button Content="Отправить" Click="SendSMS" Name="send" HorizontalAlignment="Left" Margin="10,222,0,0" VerticalAlignment="Top" FontSize="20" Height="45" Width="118"/>
        <TextBlock HorizontalAlignment="Left" Margin="10,42,0,0" Text="+7" TextWrapping="Wrap" VerticalAlignment="Top" FontSize="20"/>


    </Grid>
</Window>
